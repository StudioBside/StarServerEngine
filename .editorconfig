[*.cs]

# IDE0065: 위치가 잘못된 using 지시문
csharp_using_directive_placement = inside_namespace:silent

# SA1005: Single line comments should begin with single space
dotnet_diagnostic.SA1005.severity = silent

# SA1108: Block statements should not contain embedded comments
dotnet_diagnostic.SA1108.severity = suggestion

dotnet_code_quality.CA2100.excluded_symbol_names = DbClient | DbClientLight # sql injection 
dotnet_code_quality.CA2213.excluded_symbol_names = DbClient # IDisposable.Dispose 에서 connection을 삭제 하지 않는 것에 대한 지적.

# SA1316: Tuple element names should use correct casing
dotnet_diagnostic.SA1316.severity = suggestion # tuple element names should use correct casing
dotnet_diagnostic.SA1414.severity = suggestion # tuple types in signatures should have elemnt names


